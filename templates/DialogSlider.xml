<?xml version="1.0" encoding="UTF-8"?>
<window>
	<defaultcontrol>11</defaultcontrol>
	<include>Animation_DialogPopupOpenClose</include>
	<depth>DepthOSD+</depth>
	<controls>
		<control type="group">
			<top>{{ScaleY('20')}}</top>
			<centerleft>50%</centerleft>
			<width>{{ScaleX('840')}}</width>
			<control type="image">
				<left>{{ScaleX('-20')}}</left>
				<top>{{ScaleY('-30')}}</top>
				<width>{{ScaleX('840')}}</width>
				<height>{{ScaleY('155')}}</height>
				<texture>dialogs/dialog-bg-nobo.png</texture>
				<bordertexture border="21" infill="false">overlays/shadow.png</bordertexture>
				<bordersize>20</bordersize>
			</control>
			<control type="label" id="10">
				<description>Dialog header</description>
				<left>{{ScaleX('40')}}</left>
				<top>{{ScaleY('10')}}</top>
				<width>{{ScaleX('550')}}</width>
				<height>{{ScaleY('20')}}</height>
				<aligny>center</aligny>
				<font>font14</font>
				<textcolor>button_focus</textcolor>
			</control>
			<control type="label" id="12">
				<description>Slider Value</description>
				<left>{{ScaleX('0')}}</left>
				<top>{{ScaleY('10')}}</top>
				<width>{{ScaleX('760')}}</width>
				<height>{{ScaleY('20')}}</height>
				<align>right</align>
				<aligny>center</aligny>
				<font>font14</font>
			</control>
			<control type="slider" id="11">
				<description>Slider</description>
				<left>{{ScaleX('40')}}</left>
				<top>{{ScaleY('65')}}</top>
				<width>{{ScaleX('720')}}</width>
				<height>{{ScaleY('28')}}</height>
				<onup>11</onup>
				<ondown>11</ondown>
				<onleft>11</onleft>
				<onright>11</onright>
			</control>
			<control type="image">
				<left>{{ScaleX('0')}}</left>
				<top>{{ScaleY('65')}}</top>
				<width>{{ScaleX('28')}}</width>
				<height>{{ScaleY('28')}}</height>
				<texture flipx="true" colordiffuse="button_focus">overlays/arrowright.png</texture>
				<animation effect="zoom" start="0,100" end="100,100" delay="500" center="auto" time="200">WindowOpen</animation>
				<animation effect="zoom" start="100,100" end="0,100" center="auto" time="200">WindowClose</animation>
			</control>
			<control type="image">
				<left>{{ScaleX('770')}}</left>
				<top>{{ScaleY('65')}}</top>
				<width>{{ScaleX('28')}}</width>
				<height>{{ScaleY('28')}}</height>
				<texture colordiffuse="button_focus">overlays/arrowright.png</texture>
				<animation effect="zoom" start="0,100" end="100,100" delay="500" center="auto" time="200">WindowOpen</animation>
				<animation effect="zoom" start="100,100" end="0,100" center="auto" time="200">WindowClose</animation>
			</control>
		</control>
	</controls>
</window>
